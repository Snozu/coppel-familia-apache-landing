---
import '../styles/main.css';
import Navbar from '../components/Navbar.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Coppel Familia Apache Landing' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Google Fonts - Gilroy -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Montserrat:wght@100..900&display=swap" rel="stylesheet">
    
    <!-- Google Analytics (GA4) -->
    {import.meta.env.PROD && import.meta.env.PUBLIC_GA_MEASUREMENT_ID && (
      <>
        <script type="text/partytown" async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GA_MEASUREMENT_ID}`}></script>
        <script type="text/partytown" define:vars={{ measurementId: import.meta.env.PUBLIC_GA_MEASUREMENT_ID }}>
          window.dataLayer = window.dataLayer || [];
          function gtag() {
            dataLayer.push(arguments);
          }
          gtag('js', new Date());
          gtag('config', measurementId);
        </script>
      </>
    )}
  </head>
  <body class="bg-black text-gray-100 flex flex-col min-h-screen font-sans antialiased">
    <!-- Sticky Navbar -->
    <Navbar />
    
    <main id="content" class="flex-1 w-full overflow-x-hidden">
      <slot />
    </main>
  </body>
</html>
