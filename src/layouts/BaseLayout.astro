---
import '../styles/main.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Coppel Familia Apache Landing' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-white text-gray-900 min-h-screen">
    <slot />
  </body>
</html>